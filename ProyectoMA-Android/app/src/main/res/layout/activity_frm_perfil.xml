<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagen_cocina"
    android:orientation="vertical"
    tools:context="view.FrmPersona">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgPerfilUser"
                android:layout_width="105dp"
                android:layout_height="102dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/perropan_peque" />

            <EditText
                android:id="@+id/txtCorreoUser"
                style="@style/generalCorreoPersona" />

            <EditText
                android:id="@+id/txtUserUser"
                style="@style/generalUserPersona" />

            <EditText
                android:id="@+id/txtPassUser"
                style="@style/generalPassPersona"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtTelefonoUser"
                style="@style/generalTelefonoPersona" />

            <Spinner
                android:id="@+id/spTipoUser"
                style="@style/generalTipoPersona" />

            <EditText
                android:id="@+id/txtPlatoUser"
                style="@style/generalPlatoPersona" />

            <EditText
                android:id="@+id/txtPaisUser"
                style="@style/generalPaisPersona" />

            <EditText
                android:id="@+id/txtLocalidadUser"
                style="@style/generalLocPersona" />

            <Button
                android:id="@+id/btnPerfil"
                style="@style/btnPerfil"
                android:layout_marginTop="64dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>