        <item name="android:backgroundTint">#B0B2B3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btnLogeo">
        <item name="android:text">@string/btnLogueo</item>
