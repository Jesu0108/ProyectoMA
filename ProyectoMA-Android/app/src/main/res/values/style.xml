    </style>

    <style name="txtPassword">
        <item name="android:hint">@string/txtPassword</item>
        <item name="android:layout_marginTop">@dimen/disComponents</item>
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="imgLogo">
        <item name="android:layout_width">244dp</item>
